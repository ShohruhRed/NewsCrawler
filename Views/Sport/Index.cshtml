@{
    ViewBag.Title = "Index";
    Layout = null;
}

<div class="container">
   <div class="panel-body">
       <table class ="d-table-row">
           <thead>
               <tr>
                   <th>Company</th>
                   <th>Job Offers</th>
                   <th>Details</th>
               </tr>
           </thead>
           <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td><img src="@item.Img" style="width:80px;height:80px"/></td>
                        <td>@item.Title</td>
                        <td><a href="@item.Details">Details</a></td>
                    </tr>
                }
            </tbody>

       </table>

   </div>
</div>


